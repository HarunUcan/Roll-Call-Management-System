@{
    ViewData["Title"] = "Akademisyen Girişi";
}
<!DOCTYPE html>
<html lang="tr">



<body class="bg-light">

    <div class="container-fluid d-flex justify-content-center align-items-center">

        <div
            class="roll-call-container d-flex flex-column justify-content-between align-items-center border-style shadow p-3 mb-5 bg-body bg-white">

            <img src="~/images/yazilim_akademi_logo.png" alt="" class="logo img-fluid mt-4">

            <p class="h3 mt-4 mb-4 text-secondary">Akademisyen Giriş</p>
            <form class="d-flex flex-column align-items-center">
                <div class="form-group mb-2 mt-2">
                    <input type="tel" class="form-control" id="exampleInputTel1" aria-describedby="telHelp"
                        maxlength="10" placeholder="Telefon Numarası">

                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="exampleInputPsw1" placeholder="Şifre">
                </div>
                <button type="submit" class="btn btn-success mt-4 mb-5 w-75">Giriş</button>
            </form>
        </div>

    </div>

</body>

</html>